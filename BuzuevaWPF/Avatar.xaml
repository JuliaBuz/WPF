<Window x:Class="BuzuevaWPF.Pages.Avatar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuzuevaWPF.Pages"
        mc:Ignorable="d"
        Title="Avatar" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <Button Content="&lt;" DockPanel.Dock="Left" Uid="Left" Click= "Button_Click" Foreground="White" FontSize="30" />
            <Button Content=">" DockPanel.Dock="Right" Uid="Right" Click ="Button_Click" Foreground="White" FontSize="30"/>
            <Button Content="Установить для аватара" DockPanel.Dock="Bottom" Uid="Ava" Click= "Button_Click" Foreground="White" FontSize="20"/>
            <Image x:Name="ImgUserPic"/>
        </DockPanel>
    </Grid>
</Window>
