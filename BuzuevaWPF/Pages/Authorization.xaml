<Page x:Class="BuzuevaWPF.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BuzuevaWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">
    <Grid>
        <ScrollViewer>
            <GroupBox Header="Введите данные о себе">
                <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                    <GroupBox Header="введите логин" >
                        <TextBox x:Name="txtLogin"/>
                    </GroupBox>
                    <GroupBox Header="введите пароль">
                        <PasswordBox x:Name="txtPassword"/>
                    </GroupBox>
                    <Button Content ="Авторизация" Name="btnAutorise"  Click="btnAutorise_Click" Margin="5" FontSize="15" FontWeight="Bold" Foreground="White"/>
                    <Button Content ="Регистрация" Name="btnRegistr" Click="btnRegistr_Click"  Margin="5" FontSize="15" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </GroupBox>
        </ScrollViewer>
    </Grid>
</Page>
